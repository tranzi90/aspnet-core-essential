<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Football scheduler</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">Football scheduler</a>
        <nav>
            <ul class="topmenu">
                <li>
                    <a class="submenu-link">Players</a>
                    <ul class="submenu">
                        <li><a asp-area="" asp-controller="Players" asp-action="AddPage">Add player</a></li>
                        <li><a asp-area="" asp-controller="Players" asp-action="SearchPage">Search player</a></li>
                        <li><a asp-area="" asp-controller="Players" asp-action="ShowAllPage">Show all players</a></li>
                        <li><a asp-area="" asp-controller="Players" asp-action="DeleteAllPlayers">Delete all players</a></li>
                    </ul>
                </li>
                <li>
                    <a href="" class="submenu-link">Stadiums</a>
                    <ul class="submenu">
                        <li><a asp-area="" asp-controller="Stadiums" asp-action="AddPage">Add stadium</a></li>
                        <li><a asp-area="" asp-controller="Stadiums" asp-action="SearchPage">Search stadium</a></li>
                        <li><a asp-area="" asp-controller="Stadiums" asp-action="ShowAllPage">Show all stadiums</a></li>
                        <li><a asp-area="" asp-controller="Stadiums" asp-action="DeleteAllStadiums">Delete all stadiums</a></li>
                    </ul>
                </li>
                <li>
                    <a href="" class="submenu-link">Games</a>
                    <ul class="submenu">
                        <li><a asp-area="" asp-controller="Games" asp-action="AddPage">Add game</a></li>
                        @*<li><a asp-area="" asp-controller="Games" asp-action="SearchPage">Search game</a></li>
                        <li><a asp-area="" asp-controller="Games" asp-action="ShowAllPage">Show all games</a></li>
                        <li><a asp-area="" asp-controller="Games" asp-action="DeleteAllStadiums">Delete all games</a></li>*@
                    </ul>
                </li>
                <li>
                    <a href="" class="submenu-link">Show</a>
                    <ul class="submenu">
                        <li><a asp-area="" asp-controller="Players" asp-action="ShowAllPage">Show all players</a></li>
                        <li><a href="">Show all games</a></li>
                        <li><a asp-area="" asp-controller="Stadiums" asp-action="ShowAllPage">Show all stadiums</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>